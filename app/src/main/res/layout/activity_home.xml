<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F8F8">

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Morning"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/accountNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account: 123456789"
        android:textSize="18sp"
        android:layout_below="@id/greetingTextView"
        android:layout_marginTop="8dp"
        android:textColor="#333333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/accountNumberTextView"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/chequingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chequing: $0.00"
            android:textSize="18sp"
            android:textColor="#333333"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/savingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Savings: $0.00"
            android:textSize="18sp"
            android:textColor="#333333"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/visaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISA: $0.00"
            android:textSize="18sp"
            android:textColor="#333333"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <!-- Icons for navigation -->
        <Button
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"/>

        <Button
            android:id="@+id/accountsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accounts"/>

        <Button
            android:id="@+id/moveMoneyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Move Money"/>

        <Button
            android:id="@+id/moreButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="More"/>
    </LinearLayout>
</RelativeLayout>
