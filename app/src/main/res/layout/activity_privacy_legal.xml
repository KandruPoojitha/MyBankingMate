<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Page Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy, Security, and Legal"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="20dp" />

    <!-- Privacy Policy Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We are committed to protecting your privacy. Your data is securely stored and handled in accordance with our policies."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp" />

    <!-- Security Policy Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security Policy"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We use advanced encryption and security protocols to protect your information from unauthorized access."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp" />

    <!-- Legal Notice Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Legal Notice"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By using our app, you agree to comply with our terms and conditions. Please review them carefully."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp" />

    <!-- Footer Note -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:paddingBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you have any questions, please contact our support team."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="20dp" />
</LinearLayout>